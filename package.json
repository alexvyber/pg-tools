{
  "name": "@alexvyber/pg-tools",
  "version": "0.0.0-dev.11",
  "description": "Utils to work with PostgresQL from Deno, Node and Bun",
  "keywords": [
    "oclif",
    "postgres"
  ],
  "homepage": "https://github.com/alexvyber/pg-tools",
  "bugs": "https://github.com/alexvyber/pg-tools/issues",
  "repository": "alexvyber/pg-tools",
  "license": "MIT",
  "author": "Alexey Sokolov",
  "contributors": [
    {
      "name": "Alexey Sokolov",
      "email": "alexey@codeandmoney.com",
      "url": "https://codeandmoney.com"
    }
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pg-tools": "./bin/run.js"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "prepack": "oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "pnpm run lint",
    "version": "oclif readme && git add README.md"
  },
  "oclif": {
    "bin": "pg-tools",
    "commands": "./dist/commands",
    "dirname": "pg-tools",
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "dependencies": {
    "@oclif/core": "^4.5.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "oclif": "^4.22.16",
    "shx": "^0.4.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.16.0+sha512.8066e7b034217b700a9a4dbb3a005061d641ba130a89915213a10b3ca4919c19c037bec8066afdc559b89635fdb806b16ea673f2468fbb28aabfa13c53e3f769",
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
